page{
  display: flex;
  flex-direction: column;
}
.more-header{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  
  background: #fff;
}
.more-header .title{
  padding: 20rpx 0;
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #d9d9d9;

} 
.more-header .show{
  color: lime;
  border-bottom: 4rpx solid lime
}

.more-header .normal{
  color: #d9d9d9;
  border-bottom: 4rpx solid #d9d9d9;
}